    <script>
        const coursesData = {
            "course-01": { name: "Desarrollos Psicol√≥gicos Contempor√°neos", correlatives: [] },
            "course-02": { name: "Problemas Epistemol√≥gicos de la Psicolog√≠a", correlatives: [] },
            "course-03": { name: "Psicolog√≠a", correlatives: [] },
            "course-04": { name: "Problem√°tica Filos√≥fica", correlatives: [] },
            "course-05": { name: "Ling√º√≠stica y Discursividad Social", correlatives: [] },
            "course-06": { name: "Historia de la Psicolog√≠a", correlatives: ["course-01", "course-04"] },
            "course-07": { name: "Metodolog√≠as y Gesti√≥n de la Investigaci√≥n en Psicolog√≠a", correlatives: ["course-02"] },
            "course-08": { name: "Psicoan√°lisis I", correlatives: ["course-03"] },
            "course-09": { name: "Teor√≠a Social", correlatives: ["course-05"] },
            "course-10": { name: "Biolog√≠a Humana", correlatives: [] },
            "course-11": { name: "Epistemolog√≠a de la Psicolog√≠a y el Psicoan√°lisis", correlatives: ["course-06"] },
            "course-12": { name: "Perspectivas en Educaci√≥n", correlatives: ["course-07"] },
            "course-13": { name: "Psicoan√°lisis II", correlatives: ["course-08"] },
            "course-14": { name: "Psicolog√≠a Social y Comunitaria", correlatives: ["course-09"] },
            "course-15": { name: "Neuropsicolog√≠a y Psicolog√≠a del Desarrollo", correlatives: ["course-10"] },
            "course-16": { name: "Historia y Epistemolog√≠a de la Psicolog√≠a", correlatives: ["course-11"] },
            "course-17": { name: "Evaluaci√≥n y Psicodiagn√≥stico", correlatives: ["course-12"] },
            "course-18": { name: "Psicoan√°lisis y Psicopatolog√≠a", correlatives: ["course-13"] },
            "course-19": { name: "Organizaciones e Instituciones", correlatives: ["course-14"] },
            "course-20": { name: "Psicolog√≠a del Lenguaje y del Desarrollo", correlatives: ["course-15"] },
            "course-21": { name: "Psicopatolog√≠a y Neurofarmacolog√≠a", correlatives: ["course-15"] },
            "course-22": { name: "Salud P√∫blica y Salud Mental", correlatives: ["course-16"] },
            "course-23": { name: "Psicolog√≠a en el √Åmbito Jur√≠dico Forense", correlatives: ["course-16"] },
            "course-24": { name: "Psicolog√≠a en Educaci√≥n", correlatives: ["course-17"] },
            "course-25": { name: "Psicoterapias", correlatives: ["course-17"] },
            "course-26": { name: "Cl√≠nica I", correlatives: ["course-18"] },
            "course-27": { name: "Psicolog√≠a en el Trabajo", correlatives: ["course-19"] },
            "course-28": { name: "Intervenciones en Ni√±ez y Adolescencia", correlatives: ["course-24"] },
            "course-29": { name: "Metodolog√≠as de la Investigaci√≥n en Psicolog√≠a", correlatives: ["course-25"] },
            "course-30": { name: "Cl√≠nica II", correlatives: ["course-26"] },
            "course-31": { name: "Seminarios y Pr√°cticas de Investigaci√≥n y Extensi√≥n A-B-C", correlatives: [] }, // No tiene correlativas seg√∫n tu lista
            "course-32": { name: "Pr√°ctica Profesional Supervisada", correlatives: ["course-20", "course-21", "course-22", "course-23", "course-24", "course-25", "course-26", "course-27"] },
            "course-33": { name: "Trabajo Integrador Final", correlatives: ["course-28", "course-29", "course-30", "course-31", "course-32"] }
        };

        // Estado de las materias: 'pending', 'regularized', 'approved'
        const courseStatus = {};

        // Inicializar el estado de todas las materias
        for (const id in coursesData) {
            courseStatus[id] = 'pending';
        }

        // Funci√≥n para verificar si una materia puede ser habilitada
        function canEnableCourse(courseId) {
            const correlatives = coursesData[courseId].correlatives;
            if (correlatives.length === 0) {
                return true; // No tiene correlativas, siempre habilitada
            }
            // Verifica si TODAS las correlativas est√°n regularizadas o aprobadas
            return correlatives.every(corrId => courseStatus[corrId] === 'regularized' || courseStatus[corrId] === 'approved');
        }

        // Funci√≥n para actualizar el estado visual de una materia
        function updateCourseCard(courseId) {
            const card = document.getElementById(courseId);
            if (!card) return;

            card.classList.remove('disabled', 'regularized', 'approved');

            if (courseStatus[courseId] === 'regularized') {
                card.classList.add('regularized');
            } else if (courseStatus[courseId] === 'approved') {
                card.classList.add('approved');
            } else if (!canEnableCourse(courseId)) {
                card.classList.add('disabled');
            }
            // Si es 'pending' y puede ser habilitada (sus correlativas est√°n OK), no se le a√±ade la clase 'disabled'
            // Esto permite que las materias del primer a√±o est√©n habilitadas por defecto.
            // Y las que cumplen correlativas, tambi√©n.
        }

        // Funci√≥n para habilitar correlativas
        function enableCorrelatives() {
            for (const id in coursesData) {
                // Solo actualiza si la materia no est√° ya regularizada o aprobada
                if (courseStatus[id] === 'pending' && canEnableCourse(id)) {
                    const card = document.getElementById(id);
                    if (card && card.classList.contains('disabled')) {
                        card.classList.remove('disabled');
                    }
                }
            }
        }

        // Inicializar todas las tarjetas al cargar la p√°gina
        document.addEventListener('DOMContentLoaded', () => {
            // Habilitar las materias del primer a√±o y aquellas sin correlativas
            for (const id in coursesData) {
                if (coursesData[id].correlatives.length === 0) {
                    const card = document.getElementById(id);
                    if (card) {
                        card.classList.remove('disabled');
                    }
                }
            }
            // Asegurarse de que las materias con correlativas ya cumplidas (si se carga un estado guardado) tambi√©n se habiliten
            enableCorrelatives();

            // A√±adir event listeners a todas las tarjetas
            document.querySelectorAll('.course-card').forEach(card => {
                card.addEventListener('click', (event) => {
                    const courseId = card.id;
                    if (card.classList.contains('disabled') || card.classList.contains('approved')) {
                        return; // No hacer nada si est√° deshabilitada o ya aprobada
                    }

                    // Regularizar materia (si est√° pendiente)
                    if (courseStatus[courseId] === 'pending') {
                        courseStatus[courseId] = 'regularized';
                        updateCourseCard(courseId);
                        enableCorrelatives(); // Intentar habilitar nuevas materias
                    }
                });

                card.addEventListener('dblclick', (event) => {
                    const courseId = card.id;
                    if (courseStatus[courseId] === 'regularized') {
                        courseStatus[courseId] = 'approved';
                        updateCourseCard(courseId);
                        enableCorrelatives(); // Vuelve a intentar habilitar por si una materia aprobada habilita m√°s
                    }
                });
            });
        });
    </script>
</body>
